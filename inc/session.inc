function xhtmlOptions($list, $selected) {
  $options = '';
  foreach($list as $val => $label ) {
    if( $val == $selected ) {
      $options .= sprintf("<option selected='true' value='%s'>%s</option>", $val, $label);
    } else {
      $options .= sprintf("<option value='%s'>%s</option>", $val, $label);
    }
  }
  return $options;
}
